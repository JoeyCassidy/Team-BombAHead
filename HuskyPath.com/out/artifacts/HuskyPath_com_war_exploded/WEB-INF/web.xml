<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- add servlet -->
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <!-- list servlet -->
    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>app.servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>


    <!-- result servlet -->
    <servlet>
        <servlet-name>result</servlet-name>
        <servlet-class>app.servlets.TestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>result</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>

    <!-- index/logout servlet -->
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>app.servlets.IndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <!-- Profile servlet -->
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>app.servlets.ProfileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <!-- schedule servlet -->
    <servlet>
        <servlet-name>schedule</servlet-name>
        <servlet-class>app.servlets.ScheduleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>schedule</servlet-name>
        <url-pattern>/schedule</url-pattern>
    </servlet-mapping>

    <!-- Settings servlet -->
    <servlet>
        <servlet-name>settings</servlet-name>
        <servlet-class>app.servlets.SettingsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>settings</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>

    <!-- Classroom servlet -->
    <servlet>
        <servlet-name>classroom</servlet-name>
        <servlet-class>app.servlets.ClassroomServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>classroom</servlet-name>
        <url-pattern>/classroom</url-pattern>
    </servlet-mapping>

</web-app>